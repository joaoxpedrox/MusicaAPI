@model Colecao_Musica.Models.Musicas

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tem a certeza que quer apagar esta música?</h3>
<div>
    <h4>Musicas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Compositor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Compositor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbunSel)
        </dt>
        <dd class="col-sm-10">
            @* listar as categorias, e confrontar essa lista com as categorias a que a lição está associada *@
            @foreach (Albuns item in ViewBag.listaDeAlbuns)
            {
                if (Model.ListaDeAlbuns.Contains(item))
                {
                    @Html.DisplayFor(model => model.AlbunSel) @item.Titulo
                    <br />
                }
            }
        </dd>
    </dl>
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>}
</div>
